{
    "openapi": "3.0.0",
    "info": {
        "title": "Appto Shopping Cart",
        "description": "Shopping Cart API",
        "contact": {
            "name": "Alfredo Melendres",
            "email": "alfredo.melendres@gmail.com"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "{schema}://localhost:8030/api/v1",
            "description": "Appto Shopping Cart API Mocking",
            "variables": {
                "schema": {
                    "enum": [
                        "https",
                        "http"
                    ],
                    "default": "http"
                }
            }
        }
    ],
    "paths": {
        "/carts/{id}/products": {
            "post": {
                "tags": [
                    "Cart"
                ],
                "summary": "Add Product to Cart",
                "description": "Add product to cart",
                "operationId": "addProduct",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID of cart",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "request": "Product",
                    "description": "Product object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProductLineView"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/carts": {
            "post": {
                "tags": [
                    "Cart"
                ],
                "summary": "Create Cart",
                "description": "Create a cart",
                "operationId": "createCart",
                "requestBody": {
                    "request": "Cart",
                    "description": "Cart object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/CartView"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/carts/{id}/products/decrease": {
            "post": {
                "tags": [
                    "Cart"
                ],
                "summary": "Decrease Product Units",
                "description": "Decrease product units",
                "operationId": "decreaseProductUnits",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Cart id",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "request": "Product",
                    "description": "Product object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProductLineView"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/carts/{id}/products/increase": {
            "post": {
                "tags": [
                    "Cart"
                ],
                "summary": "Increase Product Units",
                "description": "Increase product units",
                "operationId": "increaseProductUnits",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Cart id",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "requestBody": {
                    "request": "Product",
                    "description": "Product object",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProductLineView"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/carts/{id}": {
            "delete": {
                "tags": [
                    "Cart"
                ],
                "summary": "Remove Cart",
                "description": "Remove cart",
                "operationId": "removeCart",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Cart id",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        },
        "/carts/{id}/products/{productId}": {
            "delete": {
                "tags": [
                    "Cart"
                ],
                "summary": "Remove a Product from Cart",
                "description": "Remove a product form cart",
                "operationId": "removeProduct",
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "Cart id",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    },
                    {
                        "name": "productId",
                        "in": "path",
                        "description": "Product id to delete",
                        "required": true,
                        "schema": {
                            "type": "string",
                            "format": "uuid"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Success"
                    }
                }
            }
        }
    },
    "components": {
        "schemas": {
            "CartView": {
                "title": "Cart Model",
                "description": "Cart model",
                "required": [
                    "id",
                    "buyerId"
                ],
                "properties": {
                    "id": {
                        "type": "number",
                        "format": "uuid"
                    },
                    "buyerId": {
                        "type": "string",
                        "format": "uuid"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "CartView"
                }
            },
            "MoneyView": {
                "title": "Money Model",
                "description": "Money model",
                "required": [
                    "amount",
                    "currency"
                ],
                "properties": {
                    "amount": {
                        "type": "number",
                        "format": "float"
                    },
                    "currency": {
                        "type": "string"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "MoneyView"
                }
            },
            "ProductLineView": {
                "title": "ProductLine model",
                "description": "ProductLine model",
                "required": [
                    "productId",
                    "name",
                    "price",
                    "sellerId",
                    "qty"
                ],
                "properties": {
                    "productId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "name": {
                        "type": "string"
                    },
                    "price": {
                        "$ref": "#/components/schemas/MoneyView"
                    },
                    "sellerId": {
                        "type": "string",
                        "format": "uuid"
                    },
                    "qty": {
                        "type": "integer"
                    }
                },
                "type": "object",
                "xml": {
                    "name": "ProductLineView"
                }
            }
        }
    },
    "tags": [
        {
            "name": "Cart",
            "description": "Everything about Cart"
        }
    ]
}